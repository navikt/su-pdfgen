{{#if fradrag.bruker.harBruktForventetInntektIStedetForArbeidsinntekt}}
    <p>I beregningen har vi brukt din forventede inntekt etter uførhet fordi den er høyere enn arbeidsinntekten din. Vi
        bruker alltid det høyeste beløpet av de to.</p>
{{/if}}

<h3 class="beregning__heading">Slik beregnes stønaden din:</h3>

<table class="beregning">
    {{#each beregningsperioder}}
        <tr>
            <td><h4>{{periode.fraOgMed}}-{{periode.tilOgMed}} får du</h4></td>
            <td class="beregning__beløp"><h4>{{currency_no ytelsePerMåned}}</h4></td>
        </tr>

        <tr>
            <td>Maksimalt beløp for supplerende stønad</td>
            <td class="beregning__beløp">{{currency_no satsbeløpPerMåned}}</td>
        </tr>

        {{#if fradrag.bruker.fradrag}}
            {{#each fradrag.bruker.fradrag}}
                <tr>
                    <td>{{type}}</td>
                    <td class="beregning__beløp">- {{currency_no beløp}}</td>
                </tr>
                {{#if utenlandskInntekt}}
                    <tr>
                        <td colspan="2">
                            <ol class="beregning__utenlandsk">
                                <li>Beløp i utenlandsk valuta: {{utenlandskInntekt.valuta}} {{currency_no utenlandskInntekt.beløpIUtenlandskValuta}}</li>
                                <li>Kurs ved beregning: {{currency_no utenlandskInntekt.kurs}}</li>
                            </ol>
                        </td>
                    </tr>
                {{/if}}
            {{/each}}
        {{/if}}
        {{#if fradrag.eps.fradrag}}
            {{#each fradrag.eps.fradrag}}
                <tr>
                    <td>{{type}} (Ektefelle/samboer)</td>
                    <td class="beregning__beløp">- {{currency_no beløp}}</td>
                </tr>
                {{#if utenlandskInntekt}}
                    <tr>
                        <td colspan="2">
                            <ol class="beregning__utenlandsk">
                                <li>Beløp i utenlandsk valuta: {{utenlandskInntekt.valuta}} {{currency_no utenlandskInntekt.beløpIUtenlandskValuta}}</li>
                                <li>Kurs ved beregning: {{currency_no utenlandskInntekt.kurs}}</li>
                            </ol>
                        </td>
                    </tr>
                {{/if}}
            {{/each}}
            <tr>
                <td>Fribeløp (Ektefelle/samboer)</td>
                <td class="beregning__beløp">{{currency_no epsFribeløp}}</td>
            </tr>
        {{/if}}
    {{/each}}
</table>
